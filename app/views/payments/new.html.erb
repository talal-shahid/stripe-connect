<div class="text-center">
  <div class="form-signin">
    <% if current_user.stripe_user_id %>
      <p>Already Onboarded</p>
    <% else %>
      <%= link_to 'Connect Stripe', stripe_button_link %>
    <% end %>
    <br />
    <% if user_signed_in? %>
      <%= link_to "Make Payment", new_charge_path %>
      <br/ >
      <br />
      <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
    <% end %>
  </div>
</div>